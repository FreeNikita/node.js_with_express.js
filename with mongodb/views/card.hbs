<h1>Card</h1>

<div id="card">
{{#if courses.length }}
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Count</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
                <tr>
                    <th>{{title}}</th>
                    <th>{{count}}</th>
                    <th>
                        <button
                                class="btn btn-small js-remove"
                                data-id="{{id}}"
                                data-csrf="{{@root.csrf}}"
                        >
                            Delete
                        </button>
                    </th>
                </tr>
            {{/each}}
        </tbody>
    </table>

    <p><strong>Price: </strong><span class="price">{{price}}</span></p>

    <form action="/orders" method="post">
        <input name="_csrf" value="{{csrf}}" hidden>
        <button type="submit" class="btn">Create Order</button>
    </form>
{{else }}
    <h3>Card is empty</h3>
{{/if}}
</div>